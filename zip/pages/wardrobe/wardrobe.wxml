<view class="container">
  <!-- Header -->
  <view class="header">
    <text class="title">我的衣橱</text>
    <view class="search-btn">
      <image class="icon" src="https://img.icons8.com/ios-glyphs/30/666666/search--v1.png"></image>
    </view>
  </view>

  <!-- Categories -->
  <scroll-view class="categories" scroll-x="true">
    <view class="category-item active">全部</view>
    <view class="category-item">上装</view>
    <view class="category-item">下装</view>
    <view class="category-item">连衣裙</view>
  </scroll-view>

  <!-- Grid -->
  <view class="grid">
    <view class="grid-item">
      <view class="item-img-bg">
        <text class="emoji">👚</text>
        <view class="tag"><text class="tag-icon">✓</text> 职场</view>
      </view>
      <view class="item-title">基础白衬衫</view>
      <view class="item-desc">上装 · 春夏</view>
    </view>
    <view class="grid-item">
      <view class="item-img-bg">
        <text class="emoji">👖</text>
      </view>
      <view class="item-title">直筒牛仔裤</view>
      <view class="item-desc">下装 · 四季</view>
    </view>
    <view class="grid-item">
      <view class="item-img-bg">
        <text class="emoji">👗</text>
      </view>
      <view class="item-title">法式碎花裙</view>
      <view class="item-desc">连衣裙 · 约会</view>
    </view>
    <view class="grid-item">
      <view class="item-img-bg">
        <text class="emoji">👠</text>
      </view>
      <view class="item-title">复古红高跟</view>
      <view class="item-desc">鞋履 · 职场</view>
    </view>
  </view>

  <!-- Floating Add Button -->
  <view class="add-btn" bindtap="showActionSheet">
    <text class="add-icon">+</text>
  </view>

  <!-- Action Sheet Overlay -->
  <view class="overlay {{showAction ? 'active' : ''}}" bindtap="hideActionSheet">
    <view class="action-sheet {{showAction ? 'active' : ''}}" catchtap="stopProp">
      <view class="action-menu">
        <view class="action-header">添加新单品，AI 将自动去除背景</view>
        <view class="action-item border-b" bindtap="goToEdit">
          <image class="action-icon" src="https://img.icons8.com/ios-glyphs/30/007AFF/camera.png"></image>
          <text>拍照</text>
        </view>
        <view class="action-item" bindtap="goToEdit">
          <image class="action-icon" src="https://img.icons8.com/ios-glyphs/30/007AFF/image.png"></image>
          <text>从相册选择</text>
        </view>
      </view>
      <view class="action-cancel" bindtap="hideActionSheet">取消</view>
    </view>
  </view>

  <!-- Custom Tab Bar -->
  <view class="tab-bar glass">
    <view class="tab-item active">
      <image class="tab-icon" src="https://img.icons8.com/ios-filled/50/8A2BE2/shirt.png"></image>
      <text class="tab-text">衣橱</text>
    </view>
    <view class="tab-item" bindtap="switchTab" data-path="/pages/canvas/canvas">
      <image class="tab-icon" src="https://img.icons8.com/ios-glyphs/50/999999/magic-wand.png"></image>
      <text class="tab-text">画布</text>
    </view>
    <view class="tab-item" bindtap="switchTab" data-path="/pages/calendar/calendar">
      <image class="tab-icon" src="https://img.icons8.com/ios-glyphs/50/999999/calendar.png"></image>
      <text class="tab-text">日历</text>
    </view>
    <view class="tab-item" bindtap="switchTab" data-path="/pages/discover/discover">
      <image class="tab-icon" src="https://img.icons8.com/ios-glyphs/50/999999/compass.png"></image>
      <text class="tab-text">发现</text>
    </view>
  </view>
</view>
