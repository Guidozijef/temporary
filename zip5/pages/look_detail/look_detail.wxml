<view class="container">
  <view class="nav-header glass" style="padding-top: {{statusBarHeight}}px; height: {{navBarHeight}}px;">
    <view class="nav-left-actions">
      <view class="nav-btn" bindtap="goBack">
        <text class="back-icon">‹</text> 返回
      </view>
    </view>
    <view class="nav-title">穿搭详情</view>
  </view>

  <view class="content">
    <view class="canvas-display" style="background-color: {{look.bg}};">
      <text class="emoji-huge">{{look.emoji}}</text>
      <view class="watermark">VOGUE</view>
    </view>
    
    <view class="info-card">
      <view class="info-header">
        <text class="look-title">{{look.title}}</text>
        <text class="look-date">{{look.date}}</text>
      </view>
      <view class="divider"></view>
      <text class="section-title">包含单品</text>
      <view class="items-list">
        <view class="item-tag" wx:for="{{look.items}}" wx:key="index">{{item}}</view>
      </view>
    </view>
  </view>

  <view class="bottom-bar">
    <button class="action-btn primary-btn" bindtap="shareImage">
      <image class="btn-icon" src="https://img.icons8.com/ios-glyphs/30/ffffff/share.png"></image>
      生成分享图
    </button>
    <button class="action-btn edit-btn" bindtap="editLook">重新编辑</button>
  </view>
</view>
